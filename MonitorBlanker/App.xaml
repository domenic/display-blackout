<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="MonitorBlanker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonitorBlanker">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Monitor Picker Brushes -->
            <SolidColorBrush x:Key="MonitorPickerContainerBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorSecondary}" />
            <SolidColorBrush x:Key="MonitorPickerContainerBorderBrush" Color="{ThemeResource SurfaceStrokeColorDefault}" />
            <SolidColorBrush x:Key="MonitorUnselectedBackgroundBrush" Color="{ThemeResource ControlAltFillColorQuarternary}" />
            <SolidColorBrush x:Key="MonitorUnselectedHoverBackgroundBrush" Color="{ThemeResource SubtleFillColorSecondary}" />
            <SolidColorBrush x:Key="MonitorSelectedBackgroundBrush" Color="Black" />
            <SolidColorBrush x:Key="MonitorSelectedHoverBackgroundBrush" Color="#333333" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
